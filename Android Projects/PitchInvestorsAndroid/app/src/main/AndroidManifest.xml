<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.pitchinvestorsgroup.pitchinvestorsandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            tools:node="remove"/>
        <meta-data
            android:name="android.support.VERSION"
            tools:node="remove"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".MembersActivity"
            android:label="@string/title_activity_members"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity
            android:name=".PortfolioActivity"
            android:label="@string/title_activity_portfolio"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity
            android:name=".DividendsActivity"
            android:label="@string/title_activity_dividends"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity
            android:name=".RulesActivity"
            android:label="@string/title_activity_rules"
            android:parentActivityName=".MainActivity">

        </activity>


    </application>

</manifest>